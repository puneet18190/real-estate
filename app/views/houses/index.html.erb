<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table border="1" class="table">
  <thead>
    <tr>
      <th>Owner</th>
      <th>Address</th>
      <th>Rooms</th>
      <th>Sqmt</th>
      <th>Floors</th>
      <th>Air cond</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.owner %></td>
        <td><%= house.address %></td>
        <td><%= house.rooms %></td>
        <td><%= house.sqmt %></td>
        <td><%= house.floors %></td>
        <td><%= house.air_cond %></td>
        <td><%= house.price %></td>
        <td><%= link_to 'Show', house, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_house_path(house), class: 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path, class: 'btn btn-primary' %>
