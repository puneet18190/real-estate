<p id="notice"><%= notice %></p>

<h1>Complex Buildings</h1>

<table border="1" class="table">
  <thead>
    <tr>
      <th>Owner</th>
      <th>Address</th>
      <th>Units</th>
      <th>Sqmt</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complex_buildings.each do |complex_building| %>
      <tr>
        <td><%= complex_building.owner %></td>
        <td><%= complex_building.address %></td>
        <td><%= complex_building.units %></td>
        <td><%= complex_building.sqmt %></td>
        <td><%= complex_building.price %></td>
        <td><%= image_tag(rails_blob_path(complex_building.image), width: 150 ) if complex_building.image.attached? %></td>
        <td><%= link_to 'Show', complex_building, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_complex_building_path(complex_building), class: 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Destroy', complex_building, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Complex Building', new_complex_building_path, class: 'btn btn-primary' %>
